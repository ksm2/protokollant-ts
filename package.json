{
  "name": "protokollant",
  "version": "1.0.2",
  "description": "TypeScript library and CLI to manage CHANGELOG.md files",
  "repository": "git@github.com:ksm2/protokollant.git",
  "author": "Konstantin MÃ¶llers <ksm.moellers@gmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "protokollant": "./bin/protokollant.js"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --check src/**/*.ts",
    "clean": "rimraf ./lib tsconfig.tsbuildinfo",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "prepack": "yarn run build",
    "version": "node ./bin/protokollant.js release $npm_package_version && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "commandpost": "^1.4.0"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": ["./src/**/*.ts"],
    "coveragePathIgnorePatterns": ["./src/cli.ts", "./src/index.ts"],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
